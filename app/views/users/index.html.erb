<%= provide(:title,full_title("All Users")) %>
<div class = "center">
  <h1>All users</h1>
  <div class=" mb-3 d-flex justify-content-center">
    <div class = "col-sm-5">
      <div class = "col-sm-5 d-inline-flex justify-content-center">
        <%== pagy_bootstrap_nav @pagy %>
      </div>
      <ul class = "list-group mb-3">
        <% @user.each do |user| %>
          <%= link_to user.name, user ,class: "list-group-item " %>
        <% end %>
      </ul>
      <div class = "col-sm-5 d-inline-flex justify-content-center">
        <%== pagy_bootstrap_nav @pagy %>
      </div>
    </div>
  </div>
</div>

